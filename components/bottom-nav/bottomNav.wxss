/* component/bottom-nav/bottomNav.wxss */


.bar {
    display: block;
    width: 40rpx;
    height: 5rpx;
    margin: 5rpx auto;
    background-color: #fff;
    border-radius: 2rpx;
    transition: all .4s linear .1s;
    -webkit-transition: all .4s linear .1s;
    -moz-transition: all .4s linear .1s;
    -o-transition: all .4s linear .1s;
    -ms-transition: all .4s linear .1s
}

.bar:first-child {
    margin-top: 27rpx
}

.wrap {
    position: absolute;
    top: 20rpx;
    left: 20rpx;
    margin: auto;
    width: 150rpx;
    height: 100rpx;
    filter: url(../index.html/#filt);
    -webkit-filter: url(#filt)
}

.wrap .blob {
    display: block;
    cursor: pointer;
    border: 0;
    outline: 0;
    position: absolute;
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    z-index: 10;
    background-color: #f44336;
    box-shadow: 0 0 10rpx 1rpx rgba(255,255,255,.3) inset;
    -webkit-box-shadow: 0 0 10rpx 1rpx rgba(255,255,255,.3) inset;
    -moz-box-shadow: 0 0 10rpx 1rpx rgba(255,255,255,.3) inset;
    -o-box-shadow: 0 0 10rpx 1rpx rgba(255,255,255,.3) inset;
    -ms-box-shadow: 0 0 10rpx 1rpx rgba(255,255,255,.3) inset
}

.wrap .blob[for=checking] {
    z-index: 30;
    font-size: 60rpx;
    text-align: center;
    color: #fff;
    transition: transform .5s ease-in-out .2s;
    -webkit-transition: -webkit-transform .5s ease-in-out .2s;
    -moz-transition: transform .5s ease-in-out .2s;
    -o-transition: transform .5s ease-in-out .2s;
    -ms-transition: transform .5s ease-in-out .2s
}

.wrap .blob:not([for=checking]) {
    width: 50rpx;
    height: 50rpx;
    top: 15rpx;
    left: 15rpx;
    font-size: 30rpx;
    transition: all .5s ease-in-out;
    -webkit-transition: all .5s ease-in-out;
    -moz-transition: all .5s ease-in-out;
    -o-transition: all .5s ease-in-out;
    -ms-transition: all .5s ease-in-out
}

.wrap .blob:not([for=checking]):hover {
    color: #f44336;
    animation: harlem .5s linear forwards;
    -webkit-animation: harlem .5s linear forwards;
    -moz-animation: harlem .5s linear forwards;
    -o-animation: harlem .5s linear forwards;
    -ms-animation: harlem .5s linear forwards
}

.wrap .blob:nth-child(2) {
    margin-left: 85rpx;
    margin-top: 10rpx;
    background-color: #fff
}

