.wrap .blob[for=checking]>.bar:nth-child(1) {
    transform: rotate(45deg);
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    margin-top: 37rpx
}

.wrap .blob[for=checking]>.bar:nth-child(2) {
    transform: rotate(-45deg);
    -webkit-transform: rotate(-45deg);
    -moz-transform: rotate(-45deg);
    -o-transform: rotate(-45deg);
    -ms-transform: rotate(-45deg);
    margin-top: -10rpx
}

.wrap .blob[for=checking]>.bar:nth-child(3) {
    opacity: 0
}

@keyframes harlem {
    0% {
        transform: translate(0);
        -webkit-transform: translate(0);
        -moz-transform: translate(0);
        -o-transform: translate(0);
        -ms-transform: translate(0)
    }

    25% {
        transform: translate(5rpx,5rpx);
        -webkit-transform: translate(5rpx,5rpx);
        -moz-transform: translate(5rpx,5rpx);
        -o-transform: translate(5rpx,5rpx);
        -ms-transform: translate(5rpx,5rpx)
    }

    50% {
        transform: translate(-5rpx,-5rpx);
        -webkit-transform: translate(-5rpx,-5rpx);
        -moz-transform: translate(-5rpx,-5rpx);
        -o-transform: translate(-5rpx,-5rpx);
        -ms-transform: translate(-5rpx,-5rpx)
    }

    75% {
        transform: translate(2rpx,2rpx);
        -webkit-transform: translate(2rpx,2rpx);
        -moz-transform: translate(2rpx,2rpx);
        -o-transform: translate(2rpx,2rpx);
        -ms-transform: translate(2rpx,2rpx)
    }

    100% {
        transform: translate(0);
        -webkit-transform: translate(0);
        -moz-transform: translate(0);
        -o-transform: translate(0);
        -ms-transform: translate(0)
    }
}

@-webkit-keyframes harlem {
    0% {
        transform: translate(0);
        -webkit-transform: translate(0);
        -moz-transform: translate(0);
        -o-transform: translate(0);
        -ms-transform: translate(0)
    }

    25% {
        transform: translate(5rpx,5rpx);
        -webkit-transform: translate(5rpx,5rpx);
        -moz-transform: translate(5rpx,5rpx);
        -o-transform: translate(5rpx,5rpx);
        -ms-transform: translate(5rpx,5rpx)
    }

    50% {
        transform: translate(-5rpx,-5rpx);
        -webkit-transform: translate(-5rpx,-5rpx);
        -moz-transform: translate(-5rpx,-5rpx);
        -o-transform: translate(-5rpx,-5rpx);
        -ms-transform: translate(-5rpx,-5rpx)
    }

    75% {
        transform: translate(2rpx,2rpx);
        -webkit-transform: translate(2rpx,2rpx);
        -moz-transform: translate(2rpx,2rpx);
        -o-transform: translate(2rpx,2rpx);
        -ms-transform: translate(2rpx,2rpx)
    }

    100% {
        transform: translate(0);
        -webkit-transform: translate(0);
        -moz-transform: translate(0);
        -o-transform: translate(0);
        -ms-transform: translate(0)
    }
}

